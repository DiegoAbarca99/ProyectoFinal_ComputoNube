<%- include('../partials/_heater') %>
<%- include('../partials/Administrador/_heater') %>


<div class="container">
    <h1 class="text-white contenedor">Bienvenido al sistema gestor de tareas</h1>

    <div class="row">
        <div class="col-md-5">
          <div class="card bg-primario contenedor">
            <div class="card-body">
              <form action="/add" method="post">
                <div class="form-group">
                  <input class="form-control" type="text" name="titulo" placeholder="Titulo">
                </div>
    
                <div class="form-group">
                  <input class="form-control" type="text" name="descripcion" placeholder="Descripción">
                </div>
               
                <button class="btn btn-primary" type="submit">
                  Añadir
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-md-7">
            <table class="table table-bordered table-hover bg-primario contenedor">
              <thead>
                <tr>
                  <th>N°</th>
                  <th>Titulo</th>
                  <th>Acciones</th>
                  <th>Fecha</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i < task.length; i++) { %>
                  <tr>
                    <td><%= i + 1%></td>
                    <td><%= task[i].titulo %></td>
                    <td><%= task[i].descripcion %></td>
                    <td><%= task[i].fecha %></td>
                    <td>
                      <a
                        class="<%= task[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                        href="/turn/<%= task[i]._id %>">Aprobar</a>
                      <a href="/delete/<%= task[i]._id %>"
                        class="btn btn-danger">
                        Eliminar
                      </a>
                      <a href="/edit/<%= task[i]._id %>" class="btn btn-info">
                        Editar
                      </a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
      
          </div>
        </div>






</div>


<%- include('../partials/_footer') %>