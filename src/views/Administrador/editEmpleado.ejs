<%- include('../partials/_heater') %>
<%- include('../partials/Administrador/_heater') %>


<div class="container">
    <h1 class="contenedor text-white">Actualize los datos de los Empleados</h1>
</div>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card contenedor bg-primario">
        <div class="card-body">
          <form action="/editE/<%= empleado._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre" value="<%= empleado.nombre %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="apellido" placeholder="Apellido " value="<%= empleado.apellido %>">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="telefono" placeholder="Telefono " value="<%= empleado.telefono %>">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="direccion" placeholder="Direccion " value="<%= empleado.direccion %>">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="sueldo" placeholder="Sueldo " value="<%= empleado.sueldo %>">
            </div>
            <button class="btn btn-primary" type="submit">
              Actualizar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<%- include('../partials/_footer') %>