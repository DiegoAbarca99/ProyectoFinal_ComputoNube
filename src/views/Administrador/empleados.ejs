<%- include('../partials/_heater') %>
<%- include('../partials/Administrador/_heater') %>


<div class="container">
    <h1 class="text-white contenedor">Bienvenido al sistema gestor de Empleados</h1>

    <div class="row">
        <div class="col-md-5">
          <div class="card bg-primario contenedor">
            <div class="card-body">
              <form action="/addE" method="post">
                <div class="form-group">
                  <input class="form-control" type="text" name="nombre" placeholder="Nombre">
                </div>
    
                <div class="form-group">
                  <input class="form-control" type="text" name="apellido" placeholder="Apellido">
                </div>

                <div class="form-group">
                    <input class="form-control" type="tel" name="telefono" placeholder="Telefono">
                  </div>

                  <div class="form-group">
                    <input class="form-control" type="tel" name="direccion" placeholder="Direccion">
                  </div>

                  <div class="form-group">
                    <input class="form-control" type="number" name="sueldo" placeholder="sueldo">
                  </div>
                 
               
                <button class="btn btn-primary" type="submit">
                  Añadir
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-md-7">
            <table class="table table-bordered table-hover bg-primario contenedor">
              <thead>
                <tr>
                  <th>N°</th>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Telefono</th>
                  <th>Direccion</th>
                  <th>Sueldo</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i < empleado.length; i++) { %>
                  <tr>
                    <td><%= i + 1%></td>
                    <td><%= empleado[i].nombre %></td>
                    <td><%= empleado[i].apellido %></td>
                    <td><%= empleado[i].telefono %></td>
                    <td><%= empleado[i].direccion %></td>
                    <td><%= empleado[i].sueldo %></td>
                    <td>
                       
                      <a href="/deleteE/<%= empleado[i]._id %>"
                        class="btn btn-danger">
                        Eliminar
                      </a>
                      <a href="/editE/<%= empleado[i]._id %>" class="btn btn-info">
                        Editar
                      </a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
      
          </div>
        </div>






</div>


<%- include('../partials/_footer') %>