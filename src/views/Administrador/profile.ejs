<%- include('../partials/_heater') %>
<%- include('../partials/mensajes/_mensajesSignup') %>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 offset-md-4">

            <div class="card animated fadeInDown">
                <img src="<%= image.path %>" class="card-img-top" alt="<%= image.filename %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= image.title %>
                    </h5>
                    <p class="card-text">
                        <%= image.description %>
                    </p>
                    <p>
                        <%= format(image.created_at) %>
                    </p>
                    <a href="/image/<%= image._id%>/delete" class="btn btn-danger btn-block">
                        Delete Image
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<%- include('../partials/_footer') %>